# ============================================================
# JWT v2 认证配置
# ============================================================
# JWT密钥（非常重要！生产环境必须修改为随机字符串，至少32字符）
JWT_SECRET=your-very-long-random-secret-key-change-this-in-production-min-32-chars

# JWT签发者和受众
JWT_ISSUER=your-domain.com
JWT_AUDIENCE=your-domain.com

# JWT签名算法：HS256（对称加密）或 RS256（非对称加密）
JWT_ALGORITHM=HS256

# 访问令牌有效期（秒）：默认2小时
JWT_ACCESS_TOKEN_TTL=7200

# 刷新令牌有效期（秒）：默认7天
JWT_REFRESH_TOKEN_TTL=604800

# 记住我功能的刷新令牌有效期（秒）：默认30天
JWT_REFRESH_TOKEN_REMEMBER_TTL=2592000

# 是否启用刷新令牌
JWT_ENABLE_REFRESH_TOKEN=true

# 是否启用令牌黑名单（用于注销功能）
JWT_ENABLE_BLACKLIST=true

# 黑名单缓存前缀
JWT_BLACKLIST_PREFIX=jwt:blacklist:

# 黑名单缓存时长（秒）：应该设置为访问令牌的最大有效期
JWT_BLACKLIST_TTL=7200

# 黑名单缓存驱动（留空则使用ThinkPHP默认缓存驱动）
JWT_BLACKLIST_CACHE=

# 是否在访问令牌中包含用户详细信息
JWT_INCLUDE_USER_DETAILS=true

# 是否强制HTTPS（生产环境建议开启）
JWT_FORCE_HTTPS=false

# 是否验证用户IP一致性（刷新令牌时）
JWT_VERIFY_IP=false

# 是否验证User-Agent一致性（刷新令牌时）
JWT_VERIFY_USER_AGENT=false

# 最大并发刷新令牌数（同一用户）
JWT_MAX_REFRESH_TOKENS=5

# 是否在错误响应中返回详细错误信息（生产环境建议关闭）
JWT_DEBUG_ERRORS=false

